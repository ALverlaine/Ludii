(game "El-Mthaltha" 
    (players 2)  
    (equipment { 
        ("AlquerqueBoard" 3 3)
        (piece "Marker" Each 
            (move
                Step 
                (to if:(is Empty (to)))
                (then 
                    (custodial 
                        (from (last To))
                        Orthogonal
                        (between
                            (max 1)
                            if:(is Enemy (who at:(between)))
                            (apply (remove (between)))
                        )
                        (to if:(is Friend (who at:(to))))
                    )
                )
            )
        )
    })  
    (rules 
        (start {
            (place "Marker1" (sites Bottom))
            (place "Marker2" (sites Top))
        })
        (play (forEach Piece))
        (end (if (no Pieces Next) (result Mover Win)))
    )
)

