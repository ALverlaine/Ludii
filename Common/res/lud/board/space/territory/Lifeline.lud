(define "SomeSite"
    (not
        (all Sites #1 
            if:(not #2)
        )
    )
)

(define "ReachesRegion"
    (>
        Infinity
        (count Steps
            Orthogonal
            (step
                (to
                    if:(or
                        (is Empty (to))
                        (is In (to) #2)
                    )
                )
            )
            #1
            #2
        )
    )
)

(define "Remove"
    (forEach Group Orthogonal if:(is Enemy (who at:(to)))
        (if
            (all Sites
                (sites)
                if:(not
                    ("ReachesRegion"
                        (site)
                        (difference
                            (sites Occupied by:Enemy)
                            (sites)
                        )
                    )
                )
            )
            (remove (sites))
        )
    )
)

(define "ReachesAlly"
    (all Groups Orthogonal of:(= #1 (who at:(to)))
        if:("SomeSite"
            (sites)
            (and
                (< 0
                    (count Sites 
                        in:(difference
                            (sites Occupied by:(player #1))
                            (sites)
                        )
                    )
                )
                ("ReachesRegion"
                    (site)
                    (difference
                        (sites Occupied by:(player #1))
                        (sites)
                    )
                )
            )
        )
    )
)

(define "SpendKomi"
    (if
        (and
            (< 0 (size Stack at:(handSite P2)))
            (= (mover) (id P2))
        )
        (move Remove (handSite P2))
    )
)
//------------------------------------------------------------------------------

(game "Lifeline"  
    (players 2) 
    (equipment 
        { 
        //(board <Board> use:Vertex)
        (board (dual <Board>))
        (piece "Disc" Each) 
        (piece "Shi_Western" P2) //Alternative icons: paper, button-pass
        (hand P2)
        }
    )
    (rules 
        <Balance:pie>
        (start {
            (place Stack "Shi_Western2" (handSite P2) count:<Komi>) 
        })
        phases:{
        (phase "Opening"
            (play 
                (move Add 
                    (to 
                        (sites Empty)
                        if:(= 0
                            (count Sites in:(sites Around (to) Own Orthogonal))
                        )
                    )
                    <Balance:12*>
                )
            )
            (nextPhase 
                (and
                    (= 2 (count Sites in:(sites Occupied by:P1)))
                    (= 2 (count Sites in:(sites Occupied by:P2)))
                )
                "Play"
            )
        )
        (phase "Play"
            (play 
                (or
                    ("SpendKomi")
                    (do
                        (move Add (to (sites Empty)) 
                            (then ("Remove"))
                        )
                        ifAfterwards:("ReachesAlly" (mover))
                    )
                    <Balance:12*>
                )
            )
        )
        }
        (end 
            (if 
                (no Moves Next)
                (result Next Loss)
            )
        )
    )
)

