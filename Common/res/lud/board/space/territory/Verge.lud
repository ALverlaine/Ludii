(define "IsLethal"
	(not
		(all Sites
			(union
				(sites Around (last To) Empty)
				(sites Around (last To) Enemy)
			)
			if:(is In
				(site)
				(sites Group
					at:(min
						(array
							(union
								(sites Around (last To) Empty)
								(sites Around (last To) Enemy)
							)
						)
					)
					if:(not (is Mover (who at:(to))))
				)
			)
		)
	)
)

(define "FrozenGroups"
	(forEach
		(sites Occupied by:(player #1))
		if:(= #1
			(state at:(site))
		)
	)
)

//------------------------------------------------------------------------------

(game "Verge"
    (players 2)
    (equipment
        {
            (board (hex <Size>))
            (piece "Disc" Each)
        }
    )
    (rules
		<Pie>
        (play
            (move Add
                (to 
					(difference
						(sites Empty)
						(sites Around ("FrozenGroups" (mover)) Orthogonal)
					)
				)
				(then
					(if
						("IsLethal")
						(and
						 	(forEach Site
								(sites Group at:(last To) if:(is Mover (who at:(to))))
								(set State at:(site) (mover))
							)
							(remove
								(sites Group
									from:(sites Around 
										(sites Group at:(last To) if:(is Mover (who at:(to))))
										Enemy
										if:(!= (next) (state at:(to)))
									)
								)
							)
						)
					)
				)
            )
        )
        (end 
            (if 
                (no Moves Next)
                (result Next Win)
            )
        )
    )
)

