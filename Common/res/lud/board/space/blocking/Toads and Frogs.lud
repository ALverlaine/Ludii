(metadata 
    
    (info
        {
        (id "0")
        (version "1.3.6")
        (classification "")
        }
    )
    
    (graphics {
        (piece Colour "Toad1" fillColour:(colour Blue))
        (piece Colour "Frog2" fillColour:(colour Red))
    })
)
