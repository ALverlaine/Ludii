(game "So Long Sucker"  
    (players 4)  
    (equipment { 
        (board (square 4))
        (hand Each size:4)
        (piece "Marker" Each)
    })  
    (rules
      (start {
    	  (place Stack "Marker1" (handSite P1) count:7)
    	  (place Stack "Marker2" (handSite P2) count:7)
    	  (place Stack "Marker3" (handSite P3) count:7)
    	  (place Stack "Marker4" (handSite P4) count:7)
      })
      (play 
    	(if (is Prev Mover)
    		(forEach Player
    			(if (!= (mover) (player))
    				(move Set NextPlayer (player (player)))
    			)
    		)
	    	(move 
	    		(from (handSite Mover))
	    		(to (sites Board))
	    		stack:True
	    		(then (moveAgain))
	    	)  
    	)
      )
      (end (if (no Moves Next) (result Mover Win)))
    )
)

(metadata
    (info {
        
    })
    
    (graphics {
        (no Board)
        (stackType 1 Count)
        (stackType 2 Count)
        (stackType 3 Count)
        (stackType 4 Count)
    })
    
)
