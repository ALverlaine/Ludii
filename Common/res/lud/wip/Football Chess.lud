
//------------------------------------------------------------------------------

(game "Football Chess"  
    (players 2)  
    (equipment { 
        (board (square 9)) 
        
        (piece "Rook" Each 
            (move
                Slide 
                Orthogonal 
                (to
                	(apply
                		if:(not (is In (to) (sites "Goals")))
                	)
                )
            )
        )
        (piece "King" Each 
            (move
                Step 
                (to 
                    if:(and (is Empty (to)) (not (is In (to) (sites "Goals"))))
                ) 
            )
        )
        (piece "Bishop" Each 
            (move
                Slide 
                Diagonal 
                (to
                    	(apply
                    		if:(not (is In (to) (sites "Goals")))
                    	)
                    )
            )
        )
        (piece "Knight" Each 
            (move
                Leap 
                "KnightWalk" 
                (to 
                    if:(and (is Empty (to)) (not (is In (to) (sites "Goals"))))
                ) 
            )
        )
        (piece "Queen" Each 
            (move
                Slide
                (to
                    	(apply
                    		if:(not (is In (to) (sites "Goals")))
                    	)
                    )
            ) 
        )
        (piece "Ball" Shared)
        (regions "Goals" (sites {"E1" "E9"}))
    })  
    (rules 
        (start { 
            (place "Rook1" {"A1" "I1"}) (place "Knight1" {"B1" "H1"}) (place "Bishop1" {"C1" "G1"}) (place "Queen1" coord:"D1") (place "King1" coord:"F1") 
            (place "Rook2" {"A9" "I9"}) (place "Knight2" {"B9" "H9"}) (place "Bishop2" {"C9" "G9"}) (place "Queen2" coord:"D9") (place "King2" coord:"F9") 
            (place "Ball" {"E5"})
        })
        
        (play 
           (forEach Piece)
        )
        
        (end {
            (if (or (no Moves Mover) (= (counter) 99)) (result Mover Draw)) 
        })
    )
)

