(game "TrackLoop"  
    (players 2)  
    (equipment { 
        (board (square 4) (track "Track" "0,E,N,W,S2" loop:True directed:True)) 
        (piece "Disc" Each)
    })
    (rules 
        (play
            (move Select (from (sites Empty)) (then 
                (and {
                    (note (count StepsOnTrack 4 1))
                    (note (trackSite Move from:4 steps:2))
                })
            ))
        )
        
        (end {
        })
    )
)