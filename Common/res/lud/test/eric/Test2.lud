(game "RotationTest2"
	(players 2) 
    (equipment {
            (board (hex 5))
            (piece "Disc" Each NNE
               (move 
                    (from)
                    (to 
                        (sites Distance
                            (step
                                Forward
                                (to if:(is Empty (to)))
                            )
                            newRotation:(+ (value) 1)
                            from:(from)
                            (range 1 Infinity)
                        )
                    )
                )
            )
    })
    (rules
        (start {
            (place "Disc1" (ahead (centrePoint) W) rotation:3)
            (place "Disc2" (ahead (centrePoint) E) rotation:2)
        })
        (play
            (forEach Piece)
        )
        (end 
            (if 
                (no Moves Next) 
                (result Next Loss)
            )
        )
    )
)
