(define "TopLeftOrTopRight"
    (sites Empty)
    if:(is Empty 
        (ahead (to) 
            (if
                (is Odd (count Moves))
                SSW
                SSE
            )
        )
    )
)

(game "Loop Game"
    (players 2)
    (equipment
        {
        (board (hex 4))
        (piece "Disc" P1)
        }
    )
    (rules
        (meta (swap))
        (play
            (move Add (piece "Disc1")
                (to
                    ("TopLeftOrTopRight")
                )
            )
        )
        (end
            (if 
                (is Loop (id P1))
                (result Mover Win)
            )
        )
    )
)

