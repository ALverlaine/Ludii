(game "RotationTest"
    (players 2)
    (equipment
        {
            (board (hex 5))
            (piece "Disc" Each
               (move 
                    (from)
                    (to 
                        (sites Distance
                            (step
                                Rotational
                                (to if:(is Empty (to)))
                            )
                            from:(from)
                            (range 1 Infinity)
                        )
                    )
                )
            )
        }
    )
    (rules
        (start {
            (place "Disc1" 0 rotation:1)
        })
        (play
            (forEach Piece)
        )
        (end 
            (if 
                (no Moves Next) 
                (result Next Loss)
            )
        )
    )
)