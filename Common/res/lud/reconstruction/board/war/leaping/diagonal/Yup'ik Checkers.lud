(define "HopMan" 
    (move Hop 
        (from #1) 
        (directions {FR FL}) 
        (between 
            if:("IsEnemyAt" (between)) 
            (apply (remove (between)))
        ) 
        (to if:(is Empty (to))) 
        #2
    ) 
)

(define "IsUnpromoted" ("IsPieceAt" "Counter" Mover (last To)))

(define "JumpToPromotionZone" (is In (last To) (sites Next)))

//------------------------------------------------------------------------------

(game "Yup'ik Checkers"
    (players 2) 
    ("DraughtsEquipment" (square 8))
    
    (rules 
        (start [#])
        
        (play 
            (if "SameTurn"
                (if "IsUnpromoted"
                    ("HopMan" (last To) 
                        (then 
                            (if "JumpToPromotionZone" 
                                (move Promote (last To) (piece "DoubleCounter") Mover)
                                (if (can Move ("HopMan" (last To))) (moveAgain)) 
                            ) 
                        ) 
                    )
                    ("HopDiagonalSequenceCaptureAgain")
                )
                (priority {
                    (or 
                        (forEach Piece "Counter" 
                            ("HopMan" (from) 
                                (then 
                                    (if "JumpToPromotionZone"
                                        (move Promote (last To) (piece "DoubleCounter") Mover) 
                                        (if (can Move ("HopMan" (last To))) (moveAgain)) 
                                    ) 
                                ) 
                            ) 
                        )
                        (forEach Piece "DoubleCounter" ("HopDiagonalSequenceCapture"))
                    )
                    
                    (or 
                        (forEach Piece "Counter" 
                            ("StepToEmpty" (directions {FR FL})) 
                            (then 
                                (if "JumpToPromotionZone"
                                    (move Promote (last To) (piece "DoubleCounter") Mover)
                                )
                            )
                        )
                        (forEach Piece "DoubleCounter" "StepDiagonalToEmpty")
                    )
                })
            )
        ) 
        
        (end ("CaptureAll Next"))
    )
)

