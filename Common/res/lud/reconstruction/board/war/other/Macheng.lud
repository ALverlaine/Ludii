(define "RemoveEnemyPiece" 
    (move
        Remove
        (sites Occupied by:Next container:"Board") 
    )
)

(define "IfLine3MoveAgain" 
    (if 
        (is Line 3 Orthogonal exact:True) 
        (moveAgain)
    )
)

(define "Custodial" 
    (custodial 
        (from (last To)) 
        Orthogonal
        (between (max 1) if:(is Enemy (who at:(between))) (apply (remove (between))))
        (to if:(is Friend (who at:(to)))) 
    )
)

(define "Intervene"
    (intervene 
        (from (last To))
        Orthogonal
        (to 
            if:(is Enemy (who at:(to)))
            (apply (remove (to)))
        )
    )		
)

//------------------------------------------------------------------------------

(game "Macheng"
    (players 2)
    
    (equipment { 
        (board (concentric Square rings:[#]) use:Vertex) 
        (hand Each)
        (piece "Marker" Each 
            (move
                Step 
                (to if:(is Empty (to))) 
                (then
                    (and {
                        "Custodial"
                        "Intervene"
                        "IfLine3MoveAgain" 
                    })
                )
            )
        ) 
    })  
    (rules 
        (start (place "Marker" "Hand" count:9))
        
        phases:{
        (phase "Placement"
            (play
                (if "SameTurn"
                    "RemoveEnemyPiece"
                    (move 
                        (from (handSite Mover)) 
                        (to (sites Empty)) 
                        (then
                            (and {
                                "Custodial"
                                "Intervene"
                                "IfLine3MoveAgain" 
                            })
                        )
                    )  
                )
            ) 
            (nextPhase Mover ("HandEmpty" Mover) "Movement")
        )
        
        (phase "Movement" 
            (play 
                (if "SameTurn"
                    "RemoveEnemyPiece"
                    (move 
                        (from (sites Occupied by:Mover))
                        (to (sites Empty))
                    )
                )
            )
        )
        }
        
        (end [#])
    )
)

