(game "Pasakakrida (Type 5)"  
    (players 2)  
    (equipment { 
        (board 
            (merge {
                (rectangle 1 6) 
                (shift 7 0 (rectangle 1 6))
                (shift 0 6 (rectangle 1 6))
                (shift 7 6 (rectangle 1 6))
            })
            {
            (track "Track1" [#] P1 directed:True)
            (track "Track2" [#] P1 directed:True)
            }
            use:Vertex
       )
        <Dice:dice>
        (piece "Disc" Each
            (move
                (from (from) level:(level))
                (to ("NextSiteFrom" (from))
                    if:(or 
                        (not ("IsEnemyAt" (to))) 
                        (and ("IsEnemyAt" (to)) (= 1 (size Stack at:(to))))
                   )
                    (apply 
                        (if ("IsEnemyAt" (to)) 
                            (fromTo
                                (from (to))
                                (to (mapEntry Next))
                           )
                       )	
                   )
               )
           )
       )
    })  
    (rules 
        (start {
            (place Stack "Disc1" 2 count:4)
            (place Stack "Disc1" 12 count:5)
            (place Stack "Disc1" 19 count:1)
            (place Stack "Disc1" 20 count:1)
            (place Stack "Disc1" 21 count:1)
            (place Stack "Disc1" 22 count:1)
            (place Stack "Disc1" 23 count:2)
            (place Stack "Disc2" 14 count:3)
            (place Stack "Disc2" 15 count:3)
            (place Stack "Disc2" 16 count:3)
            (place Stack "Disc2" 17 count:3)
            (place Stack "Disc2" 18 count:3)
        })
        (play 
            (do 
                (if (not "SameTurn") (roll))
                next:(forEach Die 
                    if:("DieNotUsed")
                    (forEach Piece top:True                
                        (then 
                            (if (not (all DiceUsed))
                                (moveAgain)
                           )
                       )
                   )
               )
           )		
       )
        (end [#])
   )
)

//------------------------------------------------------------------------------

(option "Dice" <Dice> args:{ <dice> } {
    (item "Two Four-Sided Dice"    <(dice d:4 faces:{2 3 4 5} num:2) >   "The game is played with two four-sided dice.")  
    (item "Two Cubic Dice"    <(dice d:6 num:2) >   "The game is played with two cubic dice.")   
    (item "Three Cubic Dice"    <(dice d:6 num:3)>   "The game is played with three cubic dice.")   
})

//------------------------------------------------------------------------------

(rulesets { 
    
    (ruleset "Ruleset/Two Four-Sided Dice (Incomplete)" {
        "Dice/Two Four-Sided Dice"
    })
    
    (ruleset "Ruleset/Two Six-Sided Dice (Incomplete)" {
        "Dice/Two Cubic Dice"
    })
    
    (ruleset "Ruleset/Three Six-Sided Dice (Incomplete)" {
        "Dice/Three Cubic Dice"
    })
    
})

