(define "CaptureEnemyToPiece"
    (apply 
        (if (is Enemy (who at:(to)))
            (remove (to))
        )
    ) 
)

(define "CaptureForwardDiagonal"
    (move
        Step 
        (directions {FR FL}) 
        (to 
            if:(is Enemy (who at:(to))) 
            (apply (remove (to)))
        )
    )
)

(define "NextCanNotMove"
    (not (can Move (do (forEach Piece Next) ifAfterwards:(not ("IsInCheck" "King_noCross" Next)))) ))

   
(define "KingMove"
		(move Step
                (to if:(not (is Friend (who at:(to))))
                    ("CaptureEnemyToPiece")
                )
            )
)

(define "KnightMove" 
		(move
                Leap 
                "KnightWalk" 
                (to 
                    if:(not (is Friend (who at:(to)))) 
                    "CaptureEnemyToPiece"
                ) 
            )		
)

(define "QueenMove" 
		(move Step
				Diagonal
                (to if:(not (is Friend (who at:(to))))
                    ("CaptureEnemyToPiece")
                )
            ) 		
)

(define "ElephantMove"
	(move Hop Orthogonal 
			(between if:True) 
			(to if:(not (is Friend (who at:(to)))) ("CaptureEnemyToPiece")) 
	)		
)

 //------------------------------------------------------------------------------
    
(game "Sarvatobhadra"
	    (players {(player N) (player S)})  
	    (equipment { 
	        (board (square 8)) 		
	        (piece "King_noCross" P1 ("KingMove"))
	        (piece "Ferz_noCross" P1 ("QueenMove"))
	        (piece "Knight" P1 ("KnightMove"))
	        (piece "Elephant" P1 ("ElephantMove"))
	        (piece "Rook" P1
	        		(move
	                        Slide 
	                        Orthogonal
	                        (to 
	                            if:(is Enemy (who at:(to))) 
	                            "CaptureEnemyToPiece"
	                        ) 
	                    )		
	        )
	        (piece "Pawn" P1
	        		(or 
	                        "StepForwardToEmpty" 
	                        "CaptureForwardDiagonal"
	                        (then
	                            (if (is In (last To) (sites Top)) 
	                            	(promote (last To) (piece "Ferz_noCross") Mover)
	                            )
	                        )
	                    )		
	        )
	        (piece "King_noCross" P2)
	    })
	    (rules 
	    		(start { 
	                (place "Pawn1" (sites Row 1))
	                (place "Rook1" {"A1" "H1"}) (place "Knight1" {"B1" "G1"}) (place "Elephant1" {"C1" "F1"}) (place "Ferz_noCross1" coord:"D1") (place "King_noCross1" coord:"E1") 
	                (place "King_noCross2" coord:"E8") 
	            })
	        (play (forEach Piece))
	        (end (if (no Moves Next) (result Mover Win)))
	    )
	)

