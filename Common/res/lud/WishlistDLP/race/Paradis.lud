(game "Paradis"
    (players <Player:num>)
    (equipment {
        (board
            (concentric Target rings:<Board:size> steps:<Player:num>)
            (track "Track" {9..0 1..9 9..0 1..9 1..9 0..8 End})
        )
        (piece "Marker" Each)
    })
    (rules
        //(start (place "Marker1" 74))
        //(start (place Stack items:{<Player:start>} (- <Board:size> 1)))
        (play (forEach Piece))
        (end (if (no Moves Next) (result Mover Win)))
    )
)

