(game "Tatsungin"
    (players 2)
    (equipment {
        (board (rectangle 1 10) use:Vertex)
        (piece "Stick" Each)
        (regions "AllSites" (sites Board))
        (dice d:2 from:0 num:8)
    })
    (rules 
        (play (do (roll) next:(forEach Piece)))
        (end (if (no Moves Next) (result Mover Win)))
    )
)

