        }
    )
    
    (graphics {
        (show Edges Hidden)    
        (show Symbol "disc" "AllSites" Vertex fillColour:(colour White) edgeColour:(colour Black) scale:0.5)
        (piece Colour "Die" state:1 fillColour:(colour Red))
        (piece Scale "Stick" 0.5)
        
    })
    
