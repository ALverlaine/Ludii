(define "HandEmpty"
(all Sites (sites Hand #1) if:(= 0 (count Cell at:(site))))
)

(game "Simplified_uno"
    (players 2)
    (equipment {
            (hand Each)
            (card "ONE_RED" {value:1 suits:"RED"}) //we can add more parameters to the card, like color, or special abilities
            (card "TWO_RED" {value:2 suits:"RED"})
            (card "THREE_RED" {value:3 suits:"RED"})
            (card "FOUR_RED" {value:4 suits:"RED"})
            (card "ONE_BLUE" {value:1 suits:"BLUE"})
            (card "TWO_BLUE" {value:2 suits:"BLUE"})
            (card "THREE_BLUE" {value:3 suits:"BLUE"})
            (card "FOUR_BLUE" {value:4 suits:"BLUE"})
            (card "ONE_GREEN" {value:1 suits:"BLUE"})
            (card "TWO_GREEN" {value:2 suits:"GREEN"})
            (card "THREE_GREEN" {value:3 suits:"GREEN"})
            (card "FOUR_GREEN" {value:4 suits:"GREEN"})
            (card "ONE_YELLOW" {value:1 suits:"YELLOW"})
            (card "TWO_YELLOW" {value:2 suits:"YELLOW"})
            (card "THREE_YELLOW" {value:3 suits:"YELLOW"})
            (card "FOUR_YELLOW" {value:4 suits:"YELLOW"})
            (deck "PLAY" 32) //name of the deck and number of cards max he can have
            (deck "STOCK" 32)
        )

    })
    (rules
        (start {
            (deckAdd "STOCK" {"ONE_RED" "TWO_RED" "THREE_RED" "FOUR_RED" "ONE_BLUE" "TWO_BLUE" "THREE_BLUE" "FOUR_BLUE" "ONE_GREEN" "TWO_GREEN" "THREE_GREEN" "FOUR_GREEN" "ONE_YELLOW" "TWO_YELLOW" "THREE_YELLOW" "FOUR_YELLOW"}) //add all the cards to the deck
            (shuffle "STOCK") //shuffle the deck, a deck can be constituted of multiple sets of cards
            (deal 2 Each from:"STOCK") //deal 2 cards to each player
            (deal 1 PLAY from:"STOCK") //deal 1 card to the discard pile
         })
        (play
            (or
                {
                (move PlayCard (if:(= (cardSiteType "suits" from:hand) (cardSiteType "suits" from:(topLevel at:"PLAY")))))
                (move PlayCard (if:(= (cardSiteType "value" from:hand) (cardSiteType "value" from:(topLevel at:"PLAY")))))
                (move DrawCard at:"STOCK")
                }
            )
        )
        (end
            (if
                ("HandEmpty") (result Mover Win)
            )
        )
    )
)
