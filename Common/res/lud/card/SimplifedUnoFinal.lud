(define "HandEmpty"
    (all Sites (sites Hand #1) if:(= 0 (count Cell at:(site))))
)

(game "Simplified_uno"
    (players 2)
    (equipment {
            (hand Each)
            (cardType "UNO_CARD" {"value" "suits"})
            (deck "PLAY" 32) // name of the deck and maximum number of cards
            (deck "STOCK" 32)
    })
    (rules
        (start {
            (set Card "UNO_CARD" "ONE_RED" {1 "RED"})
            (set Card "UNO_CARD" "TWO_RED" {2 "RED"})
            (set Card "UNO_CARD" "THREE_RED" {3 "RED"})
            (set Card "UNO_CARD" "FOUR_RED" {4 "RED"})
            (set Card "UNO_CARD" "ONE_BLUE" {1 "BLUE"})
            (set Card "UNO_CARD" "TWO_BLUE" {2 "BLUE"})
            (set Card "UNO_CARD" "THREE_BLUE" {3 "BLUE"})
            (set Card "UNO_CARD" "FOUR_BLUE" {4 "BLUE"})
            (set Card "UNO_CARD" "ONE_GREEN" {1 "GREEN"})
            (set Card "UNO_CARD" "TWO_GREEN" {2 "GREEN"})
            (set Card "UNO_CARD" "THREE_GREEN" {3 "GREEN"})
            (set Card "UNO_CARD" "FOUR_GREEN" {4 "GREEN"})
            (set Card "UNO_CARD" "ONE_YELLOW" {1 "YELLOW"})
            (set Card "UNO_CARD" "TWO_YELLOW" {2 "YELLOW"})
            (set Card "UNO_CARD" "THREE_YELLOW" {3 "YELLOW"})
            (set Card "UNO_CARD" "FOUR_YELLOW" {4 "YELLOW"})
            (set Deck "STOCK" {"ONE_RED" "TWO_RED" "THREE_RED" "FOUR_RED" "ONE_BLUE" "TWO_BLUE" "THREE_BLUE" "FOUR_BLUE" "ONE_GREEN" "TWO_GREEN" "THREE_GREEN" "FOUR_GREEN" "ONE_YELLOW" "TWO_YELLOW" "THREE_YELLOW" "FOUR_YELLOW"}) // add all the cards to the deck
            (shuffle "STOCK") // shuffle the deck, a deck can be constituted of multiple sets of cards
            (deal 2 Each from:"STOCK") // deal 2 cards to each player
            (deal 1 "PLAY" from:"STOCK") // deal 1 card to the discard pile
         })
        (play
            (or
                {
                (move PlayCard
                    (to
                        (topLevel at:(last to))
                        (if:(= (cardSite "suits" from:hand) (cardSite "suits" from:(topLevel at:(last to))))))
                )
                (move PlayCard
                    (to
                        (topLevel at:(last to))
                        if:(= (cardSite "value" from:hand) (cardSite "value" from:(topLevel at:(last to)))))
                )
                (move DrawCard at:"STOCK")
                }
            )
        )
        (end
            (if
                ("HandEmpty") (result Mover Win)
            )
        )
    )
)
