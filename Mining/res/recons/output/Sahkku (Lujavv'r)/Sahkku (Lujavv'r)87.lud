(game "Sahkku (Lujavvr)" 
    (players { 
        (player N)
        
        (player S)
        }
    )
    
    (equipment { 
        (board 
            (square 8)
        )
        
        (piece "Counter" Each 
            (move Step 
                (to if:
                    (is Empty 
                        (to)
                    )
                )
            )
        )
        
        (regions "Home" P1 
            (expand 
                (intersection 
                    (sites Bottom)
                    
                    (sites Left)
                )
            steps:2 Orthogonal )
        )
        
        (regions "Home" P2 
            (expand 
                (intersection 
                    (sites Top)
                    
                    (sites Right)
                )
            steps:2 Orthogonal )
        )
        
        (map { 
            (pair P1 P2)
            
            (pair P2 P1)
            }
        )
        }
    )
    
    (rules 
        (start { 
            (place "Counter1" 
                (difference 
                    (expand 
                        (sites Bottom)
                        steps:
                        (- 4 1)
                    )
                    
                    (sites Phase 1)
                )
            )
            
            (place "Counter2" 
                (difference 
                    (expand 
                        (sites Top)
                        steps:
                        (- 4 1)
                    )
                    
                    (sites Phase 1)
                )
            )
            }
        )
        
        (play 
            (forEach Piece)
        )
        
        (end 
            (if 
                (and 
                    (= 1 
                        (count Sites in:
                            (sites Occupied by:Mover top:False)
                        )
                    )
                    
                    (is In 
                        (centrePoint)
                        
                        (sites Occupied by:Mover top:False)
                    )
                )
                
                (result Mover Win)
            )
        )
    )
)


