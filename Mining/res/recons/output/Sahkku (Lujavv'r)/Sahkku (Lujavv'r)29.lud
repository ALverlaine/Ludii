            )
            
            (place "Pawn2" 
                (sites Row 6)
            )
            
            (place "KingnoCross1" coord:"E1")
            
            (place "KingnoCross2" coord:"D8")
            }
        )
        
        (play 
            (do 
                (forEach Piece)
                ifAfterwards:
                (not 
                    (is Threatened 
                        (id "KingnoCross" Mover)
                    )
                )
            )
        )
        
        (end 
            (if 
                (and 
                    (all Sites 
                        (sites Hand P1)
                        if:
                        (= 0 
                            (count Cell at:
                                (site)
                            )
                        )
                    )
                    
                    (all Sites 
                        (sites Hand P2)
                        if:
                        (= 0 
                            (count Cell at:
                                (site)
                            )
                        )
                    )
                )
                
                (byScore { 
                    (score P1 
                        (size Territory P1 All)
                    )
                    
                    (score P2 
                        (size Territory P2 All)
                    )
                    }
                )
