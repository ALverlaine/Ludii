(game "Riga Game" 
    (players 2)
    
    (equipment { 
        (board 
            (add 
                (concentric Square rings:3)
                vertices:{ { 0 0}
                }
                edges:{ { 6 24}
                { 11 24}
                { 15 24}
                { 16 24}
                { 17 24}
                { 12 24}
                { 8 24}
                { 7 24}
                }
            )
        use:Vertex)
        
        (hand Each)
        
        (piece "Marker" Each 
            (move Step 
                (to if:
                    (is Empty 
                        (to)
                    )
                )
                
                (then 
                    (if 
                        (or { 
                            (is Line 3 N exact:True)
                            
                            (is Line 3 S exact:True)
                            
                            (is Line 3 E exact:True)
                            
                            (is Line 3 W exact:True)
                            }
                        )
                        
                        (moveAgain)
                    )
                )
            )
        )
        }
    )
    
    (rules 
        (start 
            (place "Marker" "Hand" count:9)
        )
        phases:{ 
        (phase "Placement" 
            (play 
                (if 
                    (is Prev Mover)
                    
                    (move Remove 
                        (forEach 
                            (sites Occupied by:Enemy container:"Board")
                            if:
                            (not 
                                (is Line 3 Orthogonal through:
                                    (site)
                                )
                            )
                        )
                    )
                    
                    (move 
                        (from 
                            (handSite Mover)
                        )
                        
                        (to 
                            (sites Empty)
                        )
                        
                        (then 
                            (if 
                                (is Line 3 Orthogonal)
                                
                                (moveAgain)
                            )
                        )
                    )
                )
            )
            
            (nextPhase Mover 
                (all Sites 
                    (sites Hand Mover)
                    if:
                    (= 0 
                        (count Cell at:
                            (site)
                        )
                    )
                )
            "Movement" )
        )
        
        (phase "Movement" 
            (play 
                (if 
                    (is Prev Mover)
                    
                    (move Remove 
                        (forEach 
                            (sites Occupied by:Enemy container:"Board")
                            if:
                            (not 
                                (is Line 3 Orthogonal through:
                                    (site)
                                )
                            )
                        )
                    )
                    
                    (forEach Piece)
                )
            )
        )
        }
        
        (end { 
            (if 
                (<= 
                    (count Pieces Next)
                2)
                
                (result Next Loss)
            )
            
            (if 
                (no Moves Next)
                
                (result Mover Win)
            )
            }
        )
    )
)


