(game "Damdaman" 
    (players { 
        (player N)
        
        (player S)
        }
    )
    
    (equipment { 
        (board 
            (square 5)
            { 
            (track "Track1" "2,E,N,W,S,E1,N3,E2,S2,W1,12" P1 directed:True )
            
