                        (if 
                            (not 
                                (is Enemy 
                                    (who at:
                                        (trackSite Move steps:
                                            (count Pips)
                                        )
                                    )
                                )
                            )
                            True 
                            (not 
                                (is In 
                                    (trackSite Move steps:
                                        (count Pips)
                                    )
                                    
                                    (sites "Protect")
                                )
                            )
                        )
                        
                        (move 
                            (from 
                                (from)
                                level:
                                (level)
                            )
                            
                            (to 
                                (trackSite Move steps:
                                    (count Pips)
                                )
                                
                                (apply if:
                                    (is Enemy 
                                        (who at:
                                            (to)
                                        )
                                    )
                                    
                                    (fromTo 
                                        (from 
                                            (to)
                                        )
                                        
                                        (to 
                                            (handSite 
                                                (who at:
                                                    (to)
                                                )
                                            )
                                        )
                                        count:
                                        (count at:
                                            (to)
                                        )
                                    )
                                )
                            )
                        )
                    )
                )
            )
        )
        
        (dice d:2 from:0 num:7)
        
        (hand Each)
        
        (regions "Protect" 
            (sites { 0 10 5 16 21 23 30 36 46 56 51 42}
            )
        )
        
        (map { 
            (pair P1 0)
            
            (pair P2 10)
            }
        )
        }
    )
    
    (rules 
        (start { 
            (place Stack "Pawn1" 
                (handSite P1)
            count:4)
            
            (place Stack "Pawn2" 
                (handSite P2)
            count:4)
            }
        )
        
        (play 
            (do 
                (roll)
                next:
                (or 
                    (if 
                        (is Occupied 
                            (handSite Mover)
                        )
                        
                        (move 
                            (from 
                                (handSite Mover)
                            )
                            
                            (to 
                                (trackSite Move from:
                                    (mapEntry "Entry" Mover)
                                    "Track" steps:
                                    (- 
                                        (mapEntry "ThrowDiceValue" 
                                            (count Pips)
                                        )
                                    1 )
                                )
                                
                                (apply 
                                    (if 
                                        (is Enemy 
                                            (who at:
                                                (to)
                                            )
                                        )
                                        
                                        (forEach Level 
                                            (to)
                                            FromTop 
                                            (remove 
                                                (to)
                                                level:
                                                (level)
                                            )
                                        )
                                    )
                                )
                            )
                        )
                    )
                    
                    (forEach Piece)
                )
            )
        )
        
        (end 
            (if 
                (no Pieces Next)
                
                (result Next Loss)
            )
        )
    )
)


