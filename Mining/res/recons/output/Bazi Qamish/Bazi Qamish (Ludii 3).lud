            (track "Track2" "10,W5,N5,E,N,W,S,E5,N,End" P2 directed:True )
            }
        )
        
        (piece "Pawn" Each 
            (if 
                (= 
                    (trackSite Move steps:
                        (count Pips)
                    )
                End)
                
                (move Remove 
                    (from)
                )
                
                (if 
                    (!= 
                        (trackSite Move steps:
