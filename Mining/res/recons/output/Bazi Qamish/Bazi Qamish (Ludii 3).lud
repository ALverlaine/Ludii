(game "Bazi Qamish" 
    (players 2)
    
    (equipment { 
        (board 
            (merge { 
                (rectangle 1 11)
                
                (shift 0 5 
                    (rotate 90 
                        (rectangle 1 11)
                    )
                )
                
                (shift 0 5 
                    (rectangle 1 11)
                )
                
